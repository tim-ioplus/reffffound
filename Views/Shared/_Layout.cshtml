<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container">
            <table>
                <tr>
                    <td valign="top">
                        <div class="left-side">
                            <div class="">
                                <a class="nav-link" asp-area="" asp-controller="Bookmarks" asp-action="Index">
                                    <img src="~/assets/logo.png" />
                                </a>
                            </div>
                        </div>
                    </td>
                    <td valign="top">
                        <div class="title">
							<h1>RE:FFFFOUND!</h1>
                            <h2>image bookmarking</h2>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </header>
    <div class="container">
        <table>
            <tr>
                <td style="width=150px;vertical-align: top;">
                    <div class="left-side">
                        <div id="menu-activeusers" class="menupartial">
                            <partial name="_ActiveUsersPartial" />
                        </div>
                        <div id="menu-signin" class="menupartial">
                            <partial name="_LoginPartial" />
                        </div>
                        <div id="menu-context" class="menupartial">
							<partial name="_ContextMenuPartial" />
                        </div>
                        <div id="menu-legal" class="menupartial">
							<partial name="_LegalMenuPartial" />
                        </div>                                            
                        <div id="menu-ads">
                            <!-- more aaads f*** yeah -->
                        </div>
                    </div>

                </td>                
                <td>
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </td>
            </tr>
        </table>
    </div>
