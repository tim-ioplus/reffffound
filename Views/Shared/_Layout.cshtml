    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
	<script>
		const alertedCookieValue = document.cookie
			.split("; ")
			.find((row) => row.startsWith("alerted="))
			?.split("=")[1];

		if (alertedCookieValue == '' || alertedCookieValue == 'false') {
			alert("Attention: Current Downtimes of The Internet Archive's AWS Services affecting our service. See https://x.com/internetarchive/status/1662999547138945030 for more Information. Thank you for your Patience.");
			document.cookie = "alerted=true; SameSite=None; Secure";
		}


	</script>
</body>
</html>
