@using Microsoft.AspNetCore.Identity
@using reffffound.Data
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div id="cookieNotice" class="position-absolute" style="display:none;left:190px;top:0px;z-index:999;max-width:500px;height:auto;border:2px solid magenta;">
            <div class="content-wrap bg-magenta text-white p-1">
                Cookie Consent <span href="#" class="float-right" onclick="acceptCookieConsent()">X</span>
            </div>
            <div class="content-wrap bg-white p-3">
                <span>We use cookies to enable correct functionality of our service. We do not use cookies to measure or record user interactions or to share Information with any third parties.
                    By continuing to use our website, you agree to our <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>. <a href="#" onclick="acceptCookieConsent();">Accept</a></span>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-4 col-md-4 col-lg-3">
					<button id="menuburger" class="btn d-md-none mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#leftSideMenu" aria-expanded="false" aria-controls="leftSideMenu">
						<!-- -->
					</button>
				</div>
			   <div class="col-8 col-md-8 col-lg-9">
                    <a class="nav-link" style="padding:none !important;" asp-area="" asp-controller="Bookmarks" asp-action="Index">
                        <img src="~/assets/logo_ECinverttransparent.png" class="logo-fluid" style="border:2px solid #000;" />
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-3">                
                <div class="collapse d-md-block" id="leftSideMenu">
                    <div class="left-side">

                        <div id="menu-activeusers" class="menupartial">
                            @await Component.InvokeAsync("ActiveUsers")
                        </div>
                        <div id="menu-signin" class="menupartial">
                            <partial name="_LoginPartial" />
                        </div>
                        <div id="menu-context" class="menupartial">
                            <partial name="_ContextMenuPartial" />
                        </div>
                        <div id="menu-legal" class="menupartial">
                            <partial name="_LegalMenuPartial" />
                        </div>                                            
                        <div id="menu-ads">
                            <!-- more aaads f*** yeah -->
                        </div>
                    </div>
                </div>
            </div>                
            <div class="col-md-8 col-lg-9">
				<main role="main">
					<!-- class="pb-3" -->
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>

    </script>
    
</body>
</html>
