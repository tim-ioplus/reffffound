@{
}

<h4>Upload data to fill Database</h4>
@using (Html.BeginForm("Hydrate", "Bookmarks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<label for="file">Select a file:</label>
	@if(ViewBag.ValidationMessage != "")
	{
		<p class="danger">@ViewBag.ValidationMessage</p>
	}
	<input type="file" name="file" id="file" />
	<br />
	<input type="submit" value="Upload File" />
}
