@using System.Collections
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<reffffound.Models.Bookmark>

@{
    ViewData["Title"] = "RE: FFFFOUND! image bookmarking";
}

    <div style="margin-left:12px;">
        @foreach (var bookmark in Model)
        {
            <blockquote style="margin:5px 5px 20px 50px">

            <p class="bookmarkheader">
                <i>Quoted From:</i>&nbsp;
                <span class="headerlink"><a target="_blank" href="@bookmark.Url">@bookmark.Title</a></span><br />
                <span class="headerurl">@bookmark.Url</span>
            </p>

              <table>
              <tr>
                  <td style="width:500px;" valign="top">
                      <p class="bookmarkimage">
                          <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Guid">
                              <image style="max-width:500px;height:auto;" src="@bookmark.Image"></image>
                          </a>
                      </p>
                  </td>
                  <td style="vertical-align:top;width:100px;height:auto;border-left:1px solid #f0f0f0;padding-left:18px;">
                      @if (bookmark.Context1img != "" && bookmark.Context1link != "")
                      {
                          <div class="related-xs" style="margin-left:18px; margin:18px;">
                              <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Context1link">
                                  <image style="max-width:100px;height:auto;" src="@bookmark.Context1img"></image>
                              </a>
                          </div>
                      }
                      @if (bookmark.Context2img != "" && bookmark.Context2link != "")
                      {
                          <div class="related-xs" style="margin-left:18px; margin:18px;">
                              <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Context2link">
                                  <image style="max-width:100px;height:auto;" src="@bookmark.Context2img"></image>
                              </a>
                          </div>
                      }
                      @if (bookmark.Context3img != "" && bookmark.Context3link != "")
                      {
                          <div class="related-xs" style="margin-left:18px; margin:18px;">
                              <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Context3link">
                                  <image style="max-width:100px;height:auto;" src="@bookmark.Context3img"></image>
                              </a>
                          </div>
                      }
                  </td>
              </tr>
                </table>

                <p class="bookmarkfooter componentTodo">
                    <small>Posted on: @bookmark.Timestamp </small><br>
                    <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Guid">
                        Saved By @bookmark.Savedby People
                    </a>
                </p>
            </blockquote>
        }
    </div>

<div class="pagination">
    <!-- 
    <p>
        ViewBag["Pagination"].ToString();
    </p> 
    -->
    <br/>
    <p class="pagination component">
        <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Index" asp-route-page="1">1</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Index" asp-route-page="2">2</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Bookmarks" asp-action="Index" asp-route-page="3">3</a>
    </p>
</div>
