@model reffffound.Models.Bookmark

<h4>Bookmark an image</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-controller="Bookmarks" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if(ViewBag.ShowValidationMessage)
			{
			   <p>@ViewBag.ValidationMessage</p>
			}
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input id="urlinput" asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input id="titleinput" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin-top:24px" type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="staticmenu">
	<a asp-controller="Bookmarks" asp-action="List" asp-route-username="@ViewBag.Username" asp-route-filter="post" asp-route-page="1">Back to List</a>
</div>
