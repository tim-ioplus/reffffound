@model IEnumerable<reffffound.Models.Bookmark>

<a class="nav-link text-dark" title="Bookmark an Image" asp-area="" asp-controller="Bookmarks" asp-action="Create" asp-route-username="@ViewBag.Username">Bookmark an Image</a>

<div class="assets">

@foreach (var bookmark in Model)
{
  <blockquote class="bookmarkblock">

    <p class="bookmarkheader">
        <span class="quoted">Quoted From:</span>&nbsp;
        <span class="headerlink">
          @if(bookmark.Url != "#")
            {
                <a target="_blank" href="@bookmark.Url">@bookmark.Title</a>
            }
            else
            {
                <a target="" href="@bookmark.Url">@bookmark.Title</a>
            }
        </span><br />
        <span class="headerurl">@bookmark.Url</span>
    </p>

    <table>
    <tr>
        <td style="width:500px;" valign="top">
            <p class="bookmarkimage">
                <a class="" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Guid">
                    <image style="max-width:500px;height:auto;" src="@bookmark.Image"></image>
                </a>
            </p>
        </td>
        <td style="vertical-align:top;width:75px;height:auto;">
            <!-- No Contextlinks here. yet.. -->
        </td>
    </tr>
    </table>
    <p class="bookmarkfooter componentTodo">
        <span class="posted">Posted on: @bookmark.Timestamp </span><br>
                @if (bookmark.Guid!="")
                {
                    <a class="savedby" asp-area="" asp-controller="Bookmarks" asp-action="Details" asp-route-guid="@bookmark.Guid">Saved By @bookmark.Savedby People</a>
                }
                else
                {
                    <a href="#">Saved By @bookmark.Savedby People</a>
                }
    </p>
  </blockquote>
}

</div>
<div class="pagination">
    <p class="pagination component">
        <a class="nav-link text-dark" asp-area=""
            asp-controller="Bookmarks" asp-action="List" asp-route-username="@ViewBag.Username" asp-route-filter="post" asp-route-page="1">First</a>
        <a class="nav-link text-dark" asp-area=""
            asp-controller="Bookmarks" asp-action="List" asp-route-username="@ViewBag.Username" asp-route-filter="post" asp-route-page="@ViewBag.Previous">Previous</a>
        <span class="text-dark">@ViewBag.CurrentPage</span>
        <a class="nav-link text-dark" asp-area=""
            asp-controller="Bookmarks" asp-action="List" asp-route-username="@ViewBag.Username" asp-route-filter="post" asp-route-page="@ViewBag.NextPage">Next</a>
    </p>
</div>


